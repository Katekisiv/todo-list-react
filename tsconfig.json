{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "es5",
    "allowJs": true,
    //"noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    //"noImplicitThis": false,
    //"removeComments": false,
    //"skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    //"downlevelIteration": true,
    //"pretty": true,
//    "lib": [
//      "dom",
//      "es5",
//      "scripthost",
//      "es2015",
//      "es2015.promise",
//      "es2015.core",
//      "es2015.collection"
//    ]
  },
  "files": ["./node_modules/wmr/types.d.ts"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "out",
    "node_modules"
  ]
}
